<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TransferActivity">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="235dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/rmedium"
        android:text="Inputkan Total:"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="235dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="17dp"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/editText1"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/rmedium"
        android:text="Pilih Nama Bank :"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <AutoCompleteTextView
        android:id="@+id/editText1"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:background="@drawable/input"
        android:fontFamily="@font/rmedium"
        android:inputType="text"
        android:paddingStart="17dp"
        android:singleLine="true"
        android:completionThreshold="1"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/editText2"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginRight="220dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/rmedium"
        android:text="Nomor Rekening :"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="MissingConstraints"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/editText3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="182dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/rmedium"
        android:text="Nama Pemilik Rekening :"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="MissingConstraints"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/editText3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/garis"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@+id/editText4"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/rmedium"
        android:text="Masukkan No.HP / No. Kartu Pengirim"
        android:textColor="#7B7B7B"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/garis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:background="@drawable/input"
        android:ems="10"
        android:fontFamily="@font/rmedium"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:ignore="MissingConstraints"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/transfer"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="313dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/button_blue_rec"
        android:onClick="transfer"
        android:text="Trasnfer"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>